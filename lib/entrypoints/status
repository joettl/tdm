INSTANCE="$1"; shift
if [ -z "$INSTANCE" ]; then
  PIDS=$(pgrep -u $USER -f transmission-daemon || true)
else
  PFX="$INSTANCE_PREFIX"/$INSTANCE
  if [ ! -d "$PFX" ]; then
    echo "The instance $INSTANCE does not exist."
    exit 1
  fi
  PIDS=$(pgrep -u $USER -f "$PFX"/config || true)
fi
if [ -z "${PIDS}" ]; then
  echo "No matching processes."
  exit 1
fi
ps ${PIDS}
exit 0
